<p></p>
<h3 class="text-center">Articles</h3>
<p></p>
<div class="container">
  <div class="row mx-auto justify-content-center">
    <div class="col-md-10">

      <% @articles.each do |a| %>

        <div class="card text-dark bg-light">
          <div class="row align-items-center mx-auto g-0">
            <div class="col-md-5">
              <%= image_tag a.image_link, class: "img-fluid rounded-start" %>
            </div>
            <div class="col-md-7">
              <h5 class="card-header"><%= a.title %></h5>
              <div class="card-body">
                <p class="card-text"><%= a.summary %></p>
                <a href="<%= a.link %>" class="btn btn-secondary" target="_blank">View</a>
              </div>
              <div class="card-footer">
                <div class="row justify-content-center">
                  <div class="col-5"><%= a.stage %></div>
                  <div class="col-4"><%= a.filetype %></div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <p></p>
      <% end %>
    </div>
  </div>
</div>

