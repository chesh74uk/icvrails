<h3>Edit article</h3>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= form_for @article do | a | %>
        <div class="card">
          <div class="card-body">
            <div class="mb-3">
              <%= a.label :title, { class: "form-label"} %>
              <%= a.text_field :title, { class: "form-control"} %>
            </div>
            <div class="mb-3">
              <%= a.label :summary, { class: "form-label"} %>
              <%= a.text_area :summary, { class: "form-control"} %>
            </div>
            <div class="mb-3">
              <%= a.label :link, { class: "form-label"} %>
              <%= a.text_field :link, { class: "form-control"} %>
            </div>
            <div class="mb-3">
              <%= a.label :image_link, { class: "form-label"} %>
              <%= a.text_field :image_link, { class: "form-control"} %>
            </div>
            <div class="mb-3">
              <%= a.label :filetype, { class: "form-label"} %>
              <%= a.select(:filetype, Article::FILETYPES)  %>
            </div>
            <div class="mb-3">
              <%= a.label :stage, { class: "form-label"} %>
              <%= a.select(:stage, Article::STAGES) %>
            </div>
            <%= a.submit "Submit", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


